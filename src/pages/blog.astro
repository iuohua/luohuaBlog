---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css'
---
<Layout title="luohua's blog -- overview">
    <main>
        <Navigation />

        <h1>文章列表</h1>
        <h2>其他</h2>
        <ul role="list" class="link-card-grid">
            <Card
                href="/posts/test"
                title="测试"
                body="测试文章"
            />
            <Card href="/posts/record-of-astro-blog"
                title="记录 Astro 博客的搭建"
                body="记录 Astro 博客搭建过程中遇到的一些问题和收获"
            />
        </ul>
        <Footer />
    </main>
</Layout>

<style>
    main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}

    .link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 2rem;
		padding: 0;
	}
</style>
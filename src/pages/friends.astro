---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import {SITE_TITLE, SITE_DESCRIPTION} from '../consts';
import { Card } from '@koibumi-design/solidjs'
import FriendCard from '../components/FriendCard.astro';

---

<!doctype html>
<html lang="en">
<head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION}/>
</head>
<body>
<Header/>
<main>
    <div class="page-title">
        <Card variant="glass">
            <h1><strong>友情链接</strong></h1>
        </Card>
    </div>
    <div class="friend-card-container">
        <FriendCard avatar="/friends/alice.webp" name="Alice Aierlanta" description="" link="https://blog.aierlanta.net" />
        <FriendCard avatar="/friends/AnthonySummit.webp" name="AnthonySummit" description="" link="https://csmoe.top" />
        <FriendCard avatar="/friends/asuka.webp" name="Asuka Minato" description="" link="https://asukaminato.eu.org/" />
        <FriendCard avatar="/friends/toya.jpg" name="Fuyutsuki Toya" description="" link="https://toya.moe" />
        <FriendCard avatar="/friends/haruki.webp" name="Haruki Nikaidou" description="" link="https://i.plr.moe" />
        <FriendCard avatar="/friends/kun.webp" name="KUN" description="" link="https://soft.moe" />
        <FriendCard avatar="/friends/listder.webp" name="listder" description="" link="https://blog.listder.xyz" />
        <FriendCard avatar="/friends/shinnku.webp" name="Shinnku Nikaidoou" description="" link="https://nkd.red" />
        <FriendCard avatar="/friends/yurzhang.webp" name="Yurzhang" description="" link="https://yurzhang.com" />
    </div>
</main>

<Footer/>
</body>
</html>

<style>
  .friend-card-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
  }
    main {
        max-width: 70rem;
        width: 100%;
        margin: 3rem auto;
        padding: 0 1rem;
    }

    main > * {
        margin-bottom: 2rem;
    }

    main > *:last-child {
        margin-bottom: 0;
    }
    
    .icon-link {
        height: 2rem;
        width: 2rem;
    }

    .page-title {
        font-size: x-large;
        text-align: center;
    }
</style>
---
const {avatar, name, description, link, ...props} = Astro.props;
---

<a href={link} class="friend-card">
    <img src={avatar} alt={name} class="avatar" />
    <div class="info">
      <h3>{name}</h3>
      <p>{description}</p>
    </div>
  </a>
  
  <style>
    .friend-card {
      display: flex;
      align-items: center;
      text-decoration: none;
      border: 1px solid #ccc;
      margin: 0.5rem;
      width: calc(20% - 1rem);
      padding: 0.5rem;
    }
  
    .avatar {
      width: 64px;
      height: 64px;
      border-radius: 50%;
      margin-right: 1rem;
    }
  
    .info {
      flex-grow: 1;
    }
  
    h3 {
      margin: 0;
    }
  </style>